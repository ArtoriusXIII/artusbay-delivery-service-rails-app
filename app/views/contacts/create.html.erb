<section id="contact-create-section" >

  <div class="container">
    <div class="row text-center">
      <div class="jumbotron">
          <div class="p-2 text-center">
                  <div class="row">
                    <div class="col-lg-12 text-center">
                     
                      <h3 class="section-subheading">
                        Please Don't hesitate to get in touch with us again. 
                        <br>
                        We would love to work with you and for you.
                      </h3>
                          <% flash.each do |name, msg|  %>
                            <% if msg.is_a?(String) %>
                              <div class="alert alert-<%= name == :notice ? "success" : "danger" %> alert-dismissable">
                                <button type="buton" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <%= content_tag :div, msg, :id => "flash_#{name}" %>
                              </div>
                            <% end %>
                          <% end %>
                    </div>
                    
                  </div>
                    
              
          </div>
      </div>
    </div>
  </div>
</section>

